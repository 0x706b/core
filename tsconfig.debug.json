{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "compiler-debug",
    "target": "ES2017",
    "module": "CommonJS",
    "removeComments": false,
    "plugins": [
      {
        "transform": "../tracing-plugin/src/index.ts",
        "moduleMap": {
          "^src/(.*)": "$1 (@effect-ts/system)"
        }
      }
    ]
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
