{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "compiler-debug",
    "target": "ES2017",
    "module": "CommonJS",
    "removeComments": false,
    "plugins": [
      {
        "transform": "../tracing-plugin/src/index.ts",
        "pipe": true,
        "flow": true,
        "tracing": true,
        "identity": true,
        "dataFirst": true
      }
    ]
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
